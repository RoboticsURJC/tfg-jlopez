<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <joint name="gps_joint" type="fixed">
        <parent link="chassis"/>
        <child link="gps_frame"/>
        <origin xyz="-0.1 0.0 0.04" rpy="0 0 0"/>
    </joint>

    <link name="gps_frame">
        <visual>
             <geometry>
                <mesh filename="package://pibotj_r2c/meshes/GY-NEO6MV2NEO-6M.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://pibotj_r2c/meshes/GY-NEO6MV2NEO-6M.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>



    <gazebo reference="gps_frame">
        <material>Gazebo/Gray</material>

